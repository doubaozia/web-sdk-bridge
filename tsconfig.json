{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "declaration": true,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "test",
    "jest.config.js"
  ]
}